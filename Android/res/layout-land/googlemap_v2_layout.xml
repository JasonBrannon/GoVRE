<?xml version="1.0" encoding="utf-8"?>
<!-- 
******************************************************************************
LANDSCAPE LAYOUT 
******************************************************************************-->
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:id="@+id/root" 
	style="?pageBackground">       		
		

	<!-- BEGIN MAIN CONTENT PLACE HOLDERS -->
	<LinearLayout 
	    android:id="@+id/views"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_below="@+id/bearing" 
		android:baselineAligned="false"
		>
	
	    <!-- NAVIGATION LINEAR LAYOUT (LEFT SIDE)-->		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="120dp"
			android:layout_height="fill_parent" 
			android:padding="0dp" 
			android:layout_weight="1"
			>
	
			<!-- LEFT SIDE CONTENT -->	
			<LinearLayout
			android:orientation="vertical"  
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:gravity="left"
			android:layout_gravity="center">
			
			    <!-- HEADER 1 GRAPHIC --> 
				<ImageView 
					android:layout_height="wrap_content"   
					android:layout_width="wrap_content" 
					android:id="@+id/imgVRE" 						    	
					android:src="@drawable/govre_logo"
					android:contentDescription="@string/govre"
					android:paddingBottom="5dp"
					android:paddingTop="3dp"
					android:paddingLeft="10dp"
					>
				</ImageView> 
				
				<!-- SCHEDULE -->
				<ImageView 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:id="@+id/imgSched" 						    	
					android:src="@drawable/sched"	
					android:contentDescription="@string/sched"				
					android:paddingTop="15dp"
					android:layout_gravity="center">
				</ImageView>	
						
				<!-- ALERTS -->
				<ImageView 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:id="@+id/imgAlerts" 						    	
					android:src="@drawable/alerts"	
					android:contentDescription="@string/alert"
					android:paddingTop="15dp"
					android:layout_gravity="center">
				</ImageView>
								
				<!-- MAP -->
				<ImageView 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:id="@+id/imgMap" 						    	
					android:src="@drawable/map_grayscale"					
					android:contentDescription="@string/map"
					android:paddingTop="25dp"
					android:layout_gravity="center">				
				</ImageView>
						
				<!-- TWITTER -->
				<ImageView 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:id="@+id/imgTwitter" 						    	
					android:src="@drawable/twitter"					
					android:contentDescription="@string/twitter"
					android:paddingTop="25dp"
					android:layout_gravity="center">				
				</ImageView>
			</LinearLayout>				
		</LinearLayout>
		
		<!-- STATION LIST LINEAR LAYOUT (LEFT SIDE)-->	
		
			<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		style="?whiteBackground">
	
				
		<!-- GOOGLE MAP-->
		<fragment 
  		android:id="@+id/map"
  		android:layout_width="match_parent"
  		android:layout_height="match_parent"
  		class="com.google.android.gms.maps.SupportMapFragment"/>	 	
			
		<!-- CUSTOM PROGRESS SPINNER -->
		<ImageView
		  	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:layout_margin="1dp"
			android:gravity="center"
       		android:background="@drawable/loading"
			android:contentDescription="@string/loading"
			android:id="@+id/splashSpinner"/>	
			
		<TextView
           android:id="@+id/txtrefresh"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:text="Loading..." 
           android:textColor="@color/white"
           android:textSize="14dip"
           android:background="@drawable/rounded_corners"  />
		<TextView
           android:id="@+id/txtarrivals"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"          
           android:textColor="@color/white"
           android:textSize="14dip"      
           android:layout_alignParentRight="true"
		   android:layout_alignParentTop="true"
		   android:background="@drawable/rounded_corners" />		
		<ImageView
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
		    android:layout_alignParentBottom="true"
			android:layout_margin="1dp"
			android:gravity="center"   
			android:layout_marginBottom="100dip"    		
			android:contentDescription="@string/loading"
			android:src="@drawable/echo5bravo_logo_gray"	
			android:id="@+id/imgecho5bravologogray"/>
			
		<!-- NO SIGNAL GRAPHIC --> 
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:layout_margin="1dp"
			android:gravity="center" 
			android:id="@+id/imgNoSignal" 						    	
			android:src="@drawable/no_signal"
			android:contentDescription="@string/nosignal"
			android:paddingBottom="5dp"/>
	
		</RelativeLayout>
	</LinearLayout>		
</RelativeLayout>