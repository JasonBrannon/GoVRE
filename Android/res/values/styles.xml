<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- =============================================================== -->
	<!-- Generic Styles -->
	<!-- =============================================================== -->

	<style name="list_divider">
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">1dip</item>
		<item name="android:layout_marginTop">4dip</item>
		<item name="android:layout_marginBottom">4dip</item> 
	</style>
	
	<!-- =============================================================== -->
 	<!-- BLUE MOON                                                       -->
	<!-- =============================================================== -->

	<dimen name="page_margin_bm">5sp</dimen>
 	<dimen name="content_left_margin_bm">8sp</dimen>
 	
 	<style name="page_background_bm">
 		<item name="android:background">@drawable/blue_moon_gradient_background</item>
 		<item name="android:padding">@dimen/page_margin_bm</item>
 	</style>
 	<style name="page_background_lighter_bm">
 		<item name="android:background">@drawable/blue_moon_background</item>
 		<item name="android:padding">@dimen/page_margin_bm</item>
 	</style>
 	<style name="page_padding_layout_bm">
 		<item name="android:padding">@dimen/page_margin_bm</item>
 	</style> 	
	<style name="text_title_bm">
		<item name="android:background">@drawable/title_bar_bm</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">0</item>
		<item name="android:shadowColor">#FFF</item>
		<item name="android:padding">8dip</item>
	</style>
	<style name="text_TitleText_bm">
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">0</item>
		<item name="android:shadowColor">#FFF</item>
		<item name="android:padding">0dip</item>
	</style>	
	<style name="text_title_hidden_bm" parent="text_title_bm">
	</style>	
	<style name="text_subheader_bm">
		<item name="android:textColor">#3d3d3d</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowColor">#fcfdd5</item>
	</style>
	<style name="text_large_bm">
		<item name="android:textColor">@color/text_bm_large</item>
		<item name="android:textSize">18sp</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowColor">#454e1a</item>
	</style>
	<style name="text_regular_bm">
		<item name="android:textColor">@color/text_bm_regular</item>
		<item name="android:textSize">15sp</item>
	</style>
	<style name="text_check_box_bm">
		<item name="android:textColor">@color/text_bm_regular</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="white_background_bm">
		<item name="android:background">@drawable/white_container_bm</item>
		<item name="android:padding">10sp</item>
	</style>
	<style name="white_background_dark_border_bm">
		<item name="android:background">@drawable/white_container_dark_border_bm</item>
		<item name="android:padding">10sp</item>
	</style>
	<style name="button_bm" parent="text_large_bm">
		<item name="android:background">@drawable/button_bm</item>
		<item name="android:layout_margin">3sp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">@color/text_bm_regular</item>
	</style>
	<style name="list_bm">
		<item name="android:background">@drawable/white_container_bm</item>
		<item name="android:paddingTop">15sp</item>
		<item name="android:paddingBottom">15sp</item>
		<item name="android:paddingLeft">5sp</item>
		<item name="android:paddingRight">5sp</item>
		<item name="android:listSelector">@drawable/list_item_bm</item>
		<item name="android:cacheColorHint">#00000000</item>
		<item name="android:divider">@drawable/list_divider_bm</item>
		<item name="android:dividerHeight">1dip</item>
		<item name="android:footerDividersEnabled">false</item>
		<item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
		<item name="android:scrollbars">vertical</item>
	</style>
	<style name="list_item_bm" parent="text_large_bm">
		<item name="android:background">@drawable/list_item_bm</item>
		<item name="android:paddingTop">15sp</item>
		<item name="android:paddingBottom">15sp</item>
		<item name="android:paddingLeft">5sp</item>
		<item name="android:paddingRight">5sp</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>		
	</style>
	<style name="list_divider_bm" parent="list_divider">
		<item name="android:background">@drawable/list_divider_bm</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2sp</item>
	</style>
	<style name="listviewStyle_bm">
		<!-- <item name="android:layout_width">fill_parent</item>-->
        <!-- <item name="android:layout_height">fill_parent</item>-->		
        <item name="android:background">#ffffff</item>
        <item name="android:cacheColorHint">#FFFFFF</item>
        <item name="android:listSelector">@drawable/list_selector_bm</item>
	</style>
	<style name="labelStyle_bm">
 		<item name="android:textColor">#5d6733</item>
 	</style>
	
</resources>
